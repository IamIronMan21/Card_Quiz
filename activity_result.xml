<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@drawable/bg"
    tools:context=".ResultActivity">
    <!-- Numbers of right questions -->
    <TextView
        android:id="@+id/tvres"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:background="#02A109"
        android:gravity="center_horizontal"
        android:text="Right Questions"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="19dp" />
    <!-- Restart Quiz Button -->
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="293dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="52dp"
        android:background="#03A9F4"
        android:text="Restart the Quiz?"
        android:textColor="#ffffff" />
    <!-- Numbers of wrong questions -->
    <TextView
        android:id="@+id/tvres2"
        android:layout_width="335dp"
        android:layout_height="41dp"
        android:layout_below="@+id/tvres"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:background="#DD1102"
        android:gravity="center_horizontal"
        android:text="Wrong Questions"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="19sp" />
    <!-- Final Score -->
    <TextView
        android:id="@+id/tvres3"
        android:layout_width="336dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tvres2"
        android:layout_alignEnd="@+id/tvres2"
        android:layout_alignRight="@+id/tvres2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:background="#2141EF"
        android:gravity="center_horizontal"
        android:text="Final Score"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="257dp"
        android:layout_height="282dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        app:srcCompat="@drawable/the_end" />
    <!-- History Button -->
    <Button
        android:id="@+id/btnHistory"
        android:layout_below="@+id/btnRestart"
        android:layout_marginTop="-145dp"
        android:background="#4CAF50"
        android:text="View History"
        android:layout_marginLeft="65dp"
        android:textColor="#ffffff"
        android:layout_width="293dp"
        android:layout_height="37dp"/>

</RelativeLayout>
